{
  "id": null,
  "title": "Loki Logs Dashboard",
  "tags": ["logs", "loki", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by Container",
      "type": "stat",
      "targets": [
        {
          "expr": "sum by (container_name) (count_over_time({container_name!=\"\"} [5m]))",
          "legendFormat": "{{container_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "displayMode": "list",
            "orientation": "horizontal"
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Error Logs Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (container_name) (rate({container_name!=\"\"} |~ \"(?i)error\" [5m]))",
          "legendFormat": "{{container_name}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "logs/sec",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Recent Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{container_name=~\"$container\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Backend Application Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{container_name=~\".*backend.*\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "gridPos": {
        "h": 12,
        "w": 12,
        "x": 0,
        "y": 20
      }
    },
    {
      "id": 5,
      "title": "Error Logs Only",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=~\"containerlogs|backend\"} |~ \"(?i)(error|exception|fail)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "gridPos": {
        "h": 12,
        "w": 12,
        "x": 12,
        "y": 20
      }
    },
    {
      "id": 6,
      "title": "Log Levels Distribution",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (level) (count_over_time({job=~\"containerlogs|backend\"} | json | level != \"\" [1h]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 32
      }
    },
    {
      "id": 7,
      "title": "HTTP Status Codes",
      "type": "stat",
      "targets": [
        {
          "expr": "sum by (status) (count_over_time({job=~\"containerlogs|backend\"} | json | status =~ \"[0-9]+\" [5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 32
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "container",
        "type": "query",
        "query": "label_values(container_name)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "multi": true,
        "datasource": "Loki"
      }
    ]
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "10s"
}