{
  "id": null,
  "title": "Memory Usage Monitoring",
  "tags": ["memory", "system", "containers"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Container Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Container Memory Usage %",
      "type": "graph",
      "targets": [
        {
          "expr": "(container_memory_usage_bytes{name!=\"\"} / container_spec_memory_limit_bytes{name!=\"\"}) * 100",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Memory %",
          "show": true,
          "max": 100
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "System Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "System Memory %",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Memory %",
          "show": true,
          "max": 100
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Memory Statistics",
      "type": "stat",
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes / 1024 / 1024 / 1024",
          "legendFormat": "Total Memory (GB)",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemAvailable_bytes / 1024 / 1024 / 1024",
          "legendFormat": "Available Memory (GB)",
          "refId": "B"
        },
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / 1024 / 1024 / 1024",
          "legendFormat": "Used Memory (GB)",
          "refId": "C"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Backend Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\".*backend.*\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "Go Memory Stats",
      "type": "graph",
      "targets": [
        {
          "expr": "go_memstats_alloc_bytes / 1024 / 1024",
          "legendFormat": "Allocated Memory (MB)",
          "refId": "A"
        },
        {
          "expr": "go_memstats_sys_bytes / 1024 / 1024",
          "legendFormat": "System Memory (MB)",
          "refId": "B"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes / 1024 / 1024",
          "legendFormat": "Heap In Use (MB)",
          "refId": "C"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "Memory Usage Alerts",
      "type": "table",
      "targets": [
        {
          "expr": "(container_memory_usage_bytes{name!=\"\"} / container_spec_memory_limit_bytes{name!=\"\"}) * 100 > 80",
          "legendFormat": "{{name}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 8,
      "title": "Memory Cache and Buffers",
      "type": "graph",
      "targets": [
        {
          "expr": "node_memory_Cached_bytes / 1024 / 1024",
          "legendFormat": "Cached (MB)",
          "refId": "A"
        },
        {
          "expr": "node_memory_Buffers_bytes / 1024 / 1024",
          "legendFormat": "Buffers (MB)",
          "refId": "B"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}