{
  "id": null,
  "title": "Comprehensive System Monitoring",
  "tags": ["comprehensive", "logs", "memory", "system"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "System Overview",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Memory Usage %",
      "type": "stat",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 1
      }
    },
    {
      "id": 3,
      "title": "Error Logs (5m)",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\"containerlogs|backend\"} |~ \"(?i)error\" [5m]))",
          "legendFormat": "Errors",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 1
      }
    },
    {
      "id": 4,
      "title": "Backend Containers",
      "type": "stat",
      "targets": [
        {
          "expr": "count(container_memory_usage_bytes{name=~\".*backend.*\"})",
          "legendFormat": "Running",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 1
      }
    },
    {
      "id": 5,
      "title": "Total Log Volume",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\"containerlogs|backend\"} [5m]))",
          "legendFormat": "Logs/5m",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 1
      }
    },
    {
      "id": 6,
      "title": "Memory Monitoring",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 5
      }
    },
    {
      "id": 7,
      "title": "Container Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"} / 1024 / 1024",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      }
    },
    {
      "id": 8,
      "title": "Backend Memory Details",
      "type": "graph",
      "targets": [
        {
          "expr": "go_memstats_alloc_bytes / 1024 / 1024",
          "legendFormat": "Go Allocated (MB)",
          "refId": "A"
        },
        {
          "expr": "go_memstats_heap_inuse_bytes / 1024 / 1024",
          "legendFormat": "Go Heap (MB)",
          "refId": "B"
        },
        {
          "expr": "container_memory_usage_bytes{name=~\".*backend.*\"} / 1024 / 1024",
          "legendFormat": "Container {{name}}",
          "refId": "C"
        }
      ],
      "yAxes": [
        {
          "label": "Memory (MB)",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      }
    },
    {
      "id": 9,
      "title": "Log Monitoring",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 14
      }
    },
    {
      "id": 10,
      "title": "Log Rate by Level",
      "type": "graph",
      "targets": [
        {
          "expr": "sum by (level) (rate({job=~\"containerlogs|backend\"} | json | level != \"\" [5m]))",
          "legendFormat": "{{level}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "logs/sec",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 15
      }
    },
    {
      "id": 11,
      "title": "Error Log Timeline",
      "type": "graph",
      "targets": [
        {
          "expr": "sum(rate({job=~\"containerlogs|backend\"} |~ \"(?i)(error|exception|fail)\" [5m]))",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "errors/sec",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 15
      }
    },
    {
      "id": 12,
      "title": "Recent Application Logs",
      "type": "logs",
      "targets": [
        {
          "expr": "{container_name=~\".*backend.*\"} | json",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true,
        "enableLogDetails": true
      },
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 23
      }
    },
    {
      "id": 13,
      "title": "Critical Alerts",
      "type": "logs",
      "targets": [
        {
          "expr": "{job=~\"containerlogs|backend\"} |~ \"(?i)(error|critical|fatal|exception)\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 33
      }
    }
  ],
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "refresh": "5s"
}